<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/DetailProfilePicture"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="47dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/DetailAccName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/DetailProfilePicture"
        tools:text="name" />

    <TextView
        android:id="@+id/DetailAccHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DetailAccName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/DetailProfilePicture"
        tools:text="handle" />

    <TextView
        android:id="@+id/DetailDescription"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DetailProfilePicture"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        tools:text="Sizes 7.5-13 on  snipes_usa . adidas Ultra 4D 5.0 Solar Red. Retail $200. Now $149 shipped. Discount applied in cart." />

    <ImageView
        android:id="@+id/DetailPicture"
        android:layout_width="197dp"
        android:layout_height="196dp"
        android:layout_below="@+id/DetailDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/DetailBanner"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>